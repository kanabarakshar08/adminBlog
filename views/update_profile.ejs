<%- include('header')%>

  <!-- MAIN CONTENT-->
  <div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
               <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <strong>Profile</strong> Update
                        </div>
                        <div class="card-body card-block">
                            <form action="/admin/EditAdminData" method="post" enctype="multipart/form-data" class="form-horizontal">
                                <input type="hidden" name="EditId" value="<%= admin._id%>">
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="text-input" class=" form-control-label">Enter First Name</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <% var namelist = admin.name%>
                                        <% var name = namelist.split(" ") %>
                                        <input type="text" id="text-input" name="fname" value="<%= name[0]%>" placeholder="Enter First Name" class="form-control">
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="text-input" class=" form-control-label">Enter Last Name</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <input type="text" id="text-input" name="lname" value="<%= name[1]%>" placeholder="Enter Last Name" class="form-control">
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="email-input" class=" form-control-label">Email</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <input type="email" id="email-input" name="email" value="<%= admin.email%>" placeholder="Enter Email" class="form-control">                                    
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="textarea-input" class=" form-control-label">Description</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <textarea name="description" id="textarea-input" rows="3" placeholder="Description..." class="form-control"><%= admin.description%></textarea>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="select" class=" form-control-label">Select City</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <% var city = ["Surat","Junagadh","Rajkot"]%>
                                        <select name="city" id="select" class="form-control">
                                            <option value="0">Please select city</option>
                                            <% city.map((v)=>{%>
                                                <option value="<%= v%>" <% if(admin.city==v){%><%= 'selected'%><%}%> ><%= v%></option>
                                            <%})%>
                                        </select>
                                    </div>
                                </div>  
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label class=" form-control-label">Select Gender</label>
                                    </div>
                                    <div class="col col-md-9">
                                        <div class="form-check-inline form-check">
                                            <label for="inline-radio1" class="form-check-label ">
                                                <input type="radio" id="inline-radio1" name="gender" value="male" <% if(admin.gender=='male'){%><%= 'checked'%><%}%> class="form-check-input">Male
                                            </label>
                                            <label for="inline-radio2" class="form-check-label ">
                                                <input type="radio" id="inline-radio2" name="gender" value="female" <% if(admin.gender=='female'){%><%= 'checked'%><%}%> class="form-check-input">Female
                                            </label>
                                        </div>
                                    </div>
                                </div>
                               <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label class=" form-control-label">Select Hobby</label>
                                    </div>
                                    <div class="col col-md-9">
                                        <div class="form-check-inline form-check">
                                            <label for="inline-checkbox1" class="form-check-label ">
                                                <input type="checkbox" id="inline-checkbox1" name="hobby" value="Redding" <% if(admin.hobby.includes('Redding')){%><%= 'checked'%><%}%> class="form-check-input">Redding
                                            </label>
                                            <label for="inline-checkbox2" class="form-check-label ">
                                                <input type="checkbox" id="inline-checkbox2" name="hobby" value="Farmming" <% if(admin.hobby.includes('Farmming')){%><%= 'checked'%><%}%> class="form-check-input">Farmming
                                            </label>
                                            <label for="inline-checkbox3" class="form-check-label ">
                                                <input type="checkbox" id="inline-checkbox3" name="hobby" value="Driving" <% if(admin.hobby.includes('Driving')){%><%= 'checked'%><%}%> class="form-check-input">Driving
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="file-input" class=" form-control-label">File input</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <div>
                                            <input type="file" id="file-input" name="adminImage" class="form-control-file">
                                            <img src="<%= admin.adminImage%>" width="100px">
                                        </div>
                    
                                    </div>
                                </div>
                                <!-- <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="file-multiple-input" class=" form-control-label">Multiple File input</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <input type="file" id="file-multiple-input" name="file-multiple-input" multiple="" class="form-control-file">
                                    </div>
                                </div> -->
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary btn-sm">
                                <i class="fa fa-dot-circle-o"></i> Submit
                            </button>
                            <button type="reset" class="btn btn-danger btn-sm">
                                <i class="fa fa-ban"></i> Reset
                            </button>
                        </div>
                    </form>
                    </div>
                </div>
            </div>

<%- include('footer')%>