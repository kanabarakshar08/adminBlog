<%- include('header')%>
  <!-- MAIN CONTENT-->
  <div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <!-- DATA TABLE -->
                    <div class="table-responsive table-responsive-data2">
                        <table class="table table-data2">
                            
                            <form>
                            
                                 <input type="text" value="" name="search">
                                 <input type="submit" value="Search">
                            </form>
                            <form action="/admin/contact/deleteAllcontact" method="post">
                            <thead>
                                <tr>
                                    <th>
                                        <label class="au-checkbox">
                                            <input type="checkbox" id="ckbCheckAll">
                                            <span class="au-checkmark"></span>
                                                <button style="margin: -5px 0px 0px 25px; transform: translate(10px, -5px);" class="item" data-toggle="tooltip" data-placement="top" title="Delete">
                                                    <i class="zmdi zmdi-delete"></i>
                                            </button>
                                        </label>
                                        
                                    </th>
                                    <th>name</th>
                                    <th>email</th>
                                    <th>subject</th>
                                    <th>message</th>
                                    <th>status</th>
                                </tr>
                            </thead>
                            <tbody>
                                
                                <%
                                   if(contactData!= ''){ 
                                for(var ad of contactData){%>
                                <tr class="tr-shadow">
                                    <td>
                                        <label class="au-checkbox">
                                            <input type="checkbox" class="checkBoxClass" name="deleteall[]" value="<%= ad.id%>">
                                            <span class="au-checkmark"></span>
                                        </label>
                                    </td>
                                    <td><%= ad.name%></td>
                                    <td><%= ad.email%></td>
                                    <td><%= ad.subject%></td>
                                    <td><%= ad.message%></td>
                                    <td>
                                        <% if(ad.isActive){ %>
                                            <a href="/admin/contact/setDeactive/<%= ad.id%>" class="alert alert-success">Active</a>
                                        <%}else{%>
                                            <a href="/admin/contact/setActive/<%= ad.id%>" class="alert alert-danger">Deactive</a>
                                        <%}%>
                                    </td>
                                    <td>
                                        <div class="table-data-feature">
                                            <button type="button" class="item" data-toggle="tooltip" data-placement="top" title="Delete">
                                                <a href="/admin/contact/deletecontact/<%= ad.id%>"><i class="zmdi zmdi-delete"></i></a>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                <%} } else{%>
                                    <tr>
                                        <td colspan="10">No Record</td>
                                    </tr>
                                    <%}%>
                    
                                   
                                <tr class="spacer"></tr>
                            </tbody>
                            </form>
                        </table>
                    </div>
                    <!-- END DATA TABLE -->
                </div>
            </div>
<%- include('footer')%>


<script>
    $(document).ready(function () {
        $("#ckbCheckAll").click(function () {
            $(".checkBoxClass").attr('checked', this.checked);
        });
    });
</script>