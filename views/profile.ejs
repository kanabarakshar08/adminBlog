<%- include('header')%>

  <!-- MAIN CONTENT-->
  <div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
               <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <strong>Profile</strong>
                        </div>
                        <div class="card-body card-block">
                            <form  enctype="multipart/form-data" class="form-horizontal">
                               
                                <div class="row form-group">
                                    <div class="col-12 col-md-9">
                                        <img src="<%= locals.user.adminImage %>" width="150px">
                                    </div>
                                    
                                    
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <h3>Name :</h3>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <h4><%= locals.user.name%></h4>
                                    </div>
                                </div>
                    
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <h3>Email :</h3>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <h4><%= locals.user.email%></h4>    
                                    </div>
                                </div>
                                
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <h3>City :</h3>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <h4><%= locals.user.city%></h4>
                                    </div>
                                </div>  
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <h3>Gender :</h3>
                                    </div>
                                    <div class="col col-md-9">
                                        <h4><%= locals.user.gender%></h4>
                                    </div>
                                </div>
                               <div class="row form-group">
                                    <div class="col col-md-3">
                                        <h3>Hobby :</h3>
                                    </div>
                                    <div class="col col-md-9">
                                        <h4><%= locals.user.hobby%></h4>
                                    </div>
                                </div>
                               <div class="row form-group">
                                    <div class="col col-md-3">
                                        <h3>Description :</h3>
                                    </div>
                                    <div class="col col-md-9">
                                        <h4><%= locals.user.description%></h4>
                                    </div>
                                </div>
                                <div>
                                    <a href="/admin/updateAdminData/<%= locals.user.id%>" class="bg-success text-white p-2 h5"><i class="zmdi zmdi-edit">Edit Profile</i></a>
                                </div>
                            </form>
                        </div>
        
                    </div>
                </div>
            </div>

<%- include('footer')%>